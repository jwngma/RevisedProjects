<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".ConnectedNotwork.Prabesh78.NetworkStatusActivity">

    <Button
        android:id="@+id/networkStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Network Status"
        android:onClick="NetworkStatus"/>


    <Button
        android:id="@+id/networkType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Network type"
        android:onClick="GetNetworkInfoType"/>

</LinearLayout>